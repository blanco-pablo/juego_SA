extends layout

block content
    .container
        #error
            if error
                p.text-danger #{msm}
        if usuario != undefined
            div(class="bs-component")
                div(class="jumbotron")
                    h1(class="display-3") Bienvenido
                    p(class="lead") id: #{usuario.id}
                    p(class="lead") Nombres: #{usuario.nombres}
                    p(class="lead") Apellidos: #{usuario.apellidos}
                    p(class="lead") administrador: #{usuario.administrador}
                    p 
                        a(href="/juegos", class="btn btn-primary btn-lg") Ir a tus Juegos
            form(action="/cambio", method="post",class="form-horizontal")
                fieldset
                    h1 Formulario para Cambio de Datos
                    div(class="form-group")
                        label(for="inputEmail" class="col-lg-2 control-label") ID
                        div(class="col-lg-4")
                            input( type="text" class="form-control" id="inputEmail" name="idC" value="#{usuario.id}" disabled="")
                    div(class="form-group has-success")
                        label(for="inputEmail" class="col-lg-2 control-label") Nombres
                        div(class="col-lg-4")
                            input( type="text" class="form-control" id="inputEmail" name="nombres" value="#{usuario.nombres}")
                    div(class="form-group has-success")
                        label(for="inputEmail" class="col-lg-2 control-label") Apellidos
                        div(class="col-lg-4")
                            input( type="text" class="form-control" id="inputEmail" name="apellidos" value="#{usuario.apellidos}")
                    div(class="form-group has-success")
                        label( class="col-lg-2 control-label") Password
                        div(class="col-lg-4")
                            input( type="text" class="form-control" name="password" value="")
                   
                    div(class="form-group")
                        div(class="col-lg-10 col-lg-offset-2")
                            button(type="submit" class="btn btn-success") Cambiar Datos
            if usuario.administrador == true
                h1 Listado de Usuarios
                table(class="table table-striped table-dark")
                    thead
                        tr
                            th ID
                            th NOMBRE
                            th APELLIDOS
                            th ADMINISTRADOR
                            th EMAIL
                    tbody
                        for x in usuarios
                            tr
                                td=x.id
                                td=x.nombres
                                td=x.apellidos  
                                td=x.administrador  
                                td=x.email

                form(action="/crear", method="post",class="form-horizontal")
                    fieldset
                        h1 Crear Usuario
                        div(class="form-group has-success")
                            label(for="inputEmail" class="col-lg-2 control-label") ID
                            div(class="col-lg-4")
                                input( type="text" class="form-control" id="inputEmail" name="idC" value="0" )
                        div(class="form-group has-success")
                            label(for="inputEmail" class="col-lg-2 control-label") Email
                            div(class="col-lg-4")
                                input( type="email" class="form-control" id="inputEmail" name="email")
                        div(class="form-group has-success")
                            label(for="inputEmail" class="col-lg-2 control-label") Nombres
                            div(class="col-lg-4")
                                input( type="text" class="form-control" id="inputEmail" name="nombres")
                        div(class="form-group has-success")
                            label(for="inputEmail" class="col-lg-2 control-label") Apellidos
                            div(class="col-lg-4")
                                input( type="text" class="form-control" id="inputEmail" name="apellidos")
                        div(class="form-group has-success")
                            label( class="col-lg-2 control-label") Password
                            div(class="col-lg-4")
                                input( type="password" class="form-control" name="password" value="")
                        div(class="form-group has-success")
                            label( class="col-lg-2 control-label") Administrador
                            div(class="col-lg-4")
                                select(class="custom-select" name="administrador")
                                    option(selected="" value="false") false
                                    option(value="true") true
                        div(class="form-group")
                            div(class="col-lg-10 col-lg-offset-2")
                                button(type="submit" class="btn btn-success") Crear Usuarios
        else
            h1 No se Cargo informacion del usuario